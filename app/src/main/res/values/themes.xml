<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PET_MovieFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/menu_background</item>
        <item name="colorPrimaryVariant">@color/text_background</item>
        <item name="colorOnPrimary">@color/menu_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/menu_background</item>
        <item name="colorSecondaryVariant">@color/text_background</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.PET_MovieFinder.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/menu_background</item>
        <item name="fullscreenTextColor">@color/text_background</item>
    </style>
</resources>